<!DOCTYPE html>
<html>
<head>
  <title>Vantech</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>


  <nav class="navbar navbar-default navbar-static-top">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">Vancouver Tech Hub</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li class="active"><%= link_to "Directory", organizations_path %><span class="sr-only">(current)</span></li>
        <li><%= link_to "Events", events_path %></li>
        <li><%= link_to "News", root_path %></li>
        <li><%= link_to "About", root_path %></li>
      </ul>

      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li>
          <div class="dropdown">
            <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown"><%= current_user.first_name.capitalize %>
            <span class="caret"></span></button>
          </div>
          </li>
          <li><%= link_to "Log Out", sessions_path, method: :delete %></li>
        <% else %>
          <li><%= link_to "Sign In", new_session_path %></li>
          <li class="active"><%= link_to "Sign Up", new_user_path %><span class="sr-only">(current)</span></li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>

<div class="container">
  <% if notice || alert %>
    <hr>
      <%= notice || alert %>
    <hr>
  <% end %>

  <%= yield %>
</div>

</body>
</html>
