<%= simple_form_for @organization, html: { multipart: true, role: "form" } do |f| %>
  <%= f.input :name, wrapper_html: {class: "form-group"}, input_html: {class: "form-control"} %>
  <%= f.input :address, wrapper_html: {class: "form-group"}, input_html: {class: "form-control"}  %>
  <%= f.input :overview, label: "Overview", wrapper_html: {class: "form-group"}, input_html: {class: "form-control"} %>
  <%= f.input :employee_count, wrapper_html: {class: "form-group"}, input_html: {class: "form-control"}  %>
  <%= f.input :tech_team_size, wrapper_html: {class: "form-group"}, input_html: {class: "form-control"}  %>
  <%= f.input :website, wrapper_html: {class: "form-group"}, input_html: {class: "form-control"}  %>
  <%= f.input :twitter, wrapper_html: {class: "form-group"}, input_html: {class: "form-control"}  %>
  <% if current_user && current_user.admin %>
    <%= f.input :published  %>
  <% end %>
  <%= f.label :logo %><%= f.file_field :logo %>
  <%= f.association :tech_stacks, as: :check_boxes %>
  <%= f.file_field :images, multiple: true %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
